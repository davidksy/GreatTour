<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.a60047506.greattour.EmailLoginActivity">

    <TextView android:layout_height="0dp" android:layout_width="match_parent" android:layout_weight="0.1"/>

    <TextView android:layout_height="0dp" android:layout_width="match_parent" android:layout_weight="0.2" android:paddingLeft="60dp" android:textSize="40dp" android:text="Login By Email"/>

    <EditText android:layout_height="0dp" android:layout_width="match_parent" android:layout_weight="0.1" android:paddingLeft="100dp" android:textSize="20dp" android:layout_marginRight="40dp" android:layout_marginLeft="40dp" android:hint="Put your Email"/>

    <EditText android:layout_height="0dp" android:layout_width="match_parent" android:layout_weight="0.1" android:paddingLeft="80dp" android:textSize="20dp" android:layout_marginRight="40dp" android:layout_marginLeft="40dp" android:hint="Put your Password"/>

    <Button android:layout_height="0dp" android:layout_width="match_parent" android:layout_weight="0.1" android:text="LOG IN" android:layout_marginRight="40dp" android:layout_marginLeft="40dp"/>

    <Button android:layout_height="0dp" android:layout_width="match_parent" android:layout_weight="0.1" android:text="Find Password" android:layout_marginRight="40dp" android:layout_marginLeft="40dp"/>

</LinearLayout>
