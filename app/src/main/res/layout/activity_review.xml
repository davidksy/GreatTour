<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a60047506.greattour.SharescheduleActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/review_text" />

    <LinearLayout android:orientation="horizontal" android:layout_height="0dp"
        android:layout_width="match_parent" android:layout_weight="0.1"
        android:layout_gravity="right">

        <ImageButton
            android:id="@+id/add_review"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:onClick="onBtnReview"
            android:src="@drawable/add"
            android:layout_gravity="right"
            android:layout_marginLeft="100dp"
            android:background="#f9f5f5"/>

        <ImageButton
            android:id="@+id/add_schedule"
            android:layout_width="50dp"
            android:scaleType="fitXY"
            android:layout_height="50dp"
            android:src="@drawable/clock"
            android:onClick="onBtnAdd"
            android:layout_marginLeft="100dp"

            android:background="#f9f5f5"
            />

    </LinearLayout>


</LinearLayout>
