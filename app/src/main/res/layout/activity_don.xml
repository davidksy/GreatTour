<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="1"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="com.example.a60047506.greattour.DonActivity">



    <LinearLayout android:orientation="horizontal" android:layout_height="0dp"
        android:layout_width="match_parent" android:layout_weight="0.1">

    <Button android:layout_height="match_parent" android:layout_width="150dp"
        android:text="Day" android:id="@+id/day" android:onClick="ChooseDay"
        android:layout_marginLeft="25dp"/>


        <Button android:layout_height="match_parent" android:layout_width="150dp"
            android:text="Category" android:id="@+id/category" android:onClick="ChooseCategory"
            android:layout_marginLeft="25dp"/>


    </LinearLayout>


    <LinearLayout android:orientation="horizontal" android:layout_height="0dp"
        android:layout_width="match_parent" android:layout_weight="0.1">

        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:id="@+id/day_txt"/>
        <TextView
            android:id="@+id/category_txt"
            android:layout_width="200dp"
            android:layout_height="match_parent" />

    </LinearLayout>



    <Button android:layout_height="0dp" android:layout_width="match_parent"
        android:text="Say detail" android:layout_weight="0.1" android:id="@+id/saydetail"
        android:onClick="Saydetail"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/detail_info_edit"
            android:layout_width="match_parent"
            android:text ="버튼을 눌러 자세한 정보를 말해보세요"
            android:layout_height="50dp"
            android:textAlignment="center" />

    </LinearLayout>


    <Button android:layout_height="0dp" android:layout_width="match_parent"
        android:text="Say payment" android:layout_weight="0.1" android:id="@+id/saypay"
        android:onClick="Saypay"/>

    <TextView
        android:id="@+id/pay_info_txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text ="버튼을 눌러 사용한 금액을 말해보세요"
        android:textAlignment="center"/>

    <ScrollView android:layout_height="0dp" android:layout_width="match_parent"
        android:layout_weight="0.5"> </ScrollView>


    <LinearLayout android:orientation="horizontal" android:layout_height="0dp"
        android:layout_width="match_parent" android:layout_weight="0.1">

    <Button android:layout_height="match_parent" android:layout_width="wrap_content"
        android:text="DON" android:layout_marginLeft="15dp" android:onClick="moveDon"/>

    <Button android:layout_height="match_parent" android:layout_width="wrap_content"
        android:text="schedule" android:onClick="moveSchedule"/>

    <Button android:layout_height="match_parent" android:layout_width="wrap_content"
        android:text="friend" android:onClick="moveFriend"/>

    <Button android:layout_height="match_parent" android:layout_width="wrap_content"
        android:text="my page" android:onClick="moveMypage"/>

</LinearLayout>

</LinearLayout>
